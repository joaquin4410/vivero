@model PasswordResetRequest

@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Auth/Contra.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="password-reset-container">
        <div class="password-reset-card">
            <h1 class="text-center"><i class="fas fa-key"></i> Recuperar Contraseña</h1>
            <p class="text-center">Introduce tu correo electrónico para restablecer tu contraseña.</p>

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <label for="Email"><i class="fas fa-envelope"></i> Correo Electrónico</label>
                    <input type="email" name="Email" class="form-control" placeholder="Ingrese su correo electrónico" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Enviar</button>
                    <a asp-action="Login" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
