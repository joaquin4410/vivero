@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/Auth/reset.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="reset-container">
        <div class="reset-card">
            <h1 class="text-center"><i class="fas fa-lock"></i> Restablecer Contraseña</h1>
            <p class="text-center">Introduce tu nueva contraseña y verifica su seguridad.</p>

            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />

                <div class="form-group">
                    <label for="Password"><i class="fas fa-key"></i> Nueva Contraseña</label>
                    <input type="password" asp-for="Password" id="password" class="form-control"
                           required
                           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{8,}"
                           title="Debe tener al menos una mayúscula, una minúscula, un número, un carácter especial y al menos 8 caracteres"
                           placeholder="Crea una contraseña segura" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="password-strength">
                    <p id="strengthMessage">Fuerza de la contraseña: <span id="strengthLevel">Débil</span></p>
                    <progress id="passwordStrengthBar" max="5" value="0"></progress>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Restablecer</button>
                    <a asp-action="Login" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        const passwordInput = document.getElementById("password");
        const strengthMessage = document.getElementById("strengthMessage");
        const strengthLevel = document.getElementById("strengthLevel");
        const strengthBar = document.getElementById("passwordStrengthBar");

        passwordInput.addEventListener("input", () => {
            const value = passwordInput.value;

            let strength = 0;

            // Verificar criterios
            if (value.length >= 8) strength++; // Mínimo 8 caracteres
            if (/[A-Z]/.test(value)) strength++; // Al menos una mayúscula
            if (/[a-z]/.test(value)) strength++; // Al menos una minúscula
            if (/\d/.test(value)) strength++; // Al menos un número
            if (/[\W_]/.test(value)) strength++; // Al menos un carácter especial

            // Actualizar barra de progreso y mensaje
            strengthBar.value = strength;
            switch (strength) {
                case 0:
                case 1:
                    strengthLevel.textContent = "Muy Débil";
                    strengthMessage.style.color = "red";
                    break;
                case 2:
                    strengthLevel.textContent = "Débil";
                    strengthMessage.style.color = "orange";
                    break;
                case 3:
                    strengthLevel.textContent = "Media";
                    strengthMessage.style.color = "gold";
                    break;
                case 4:
                    strengthLevel.textContent = "Fuerte";
                    strengthMessage.style.color = "green";
                    break;
                case 5:
                    strengthLevel.textContent = "Muy Fuerte";
                    strengthMessage.style.color = "darkgreen";
                    break;
            }
        });
    </script>
</body>
</html>
