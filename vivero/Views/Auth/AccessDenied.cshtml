@{
    ViewData["Title"] = "Acceso Denegado";
}
<link rel="stylesheet" href="~/css/Denegado.css" asp-append-version="true" />
<div class="container text-center mt-5">
    <div class="animation-container">
        <h1 class="text-danger animated-title">⛔ Acceso Denegado</h1>
        <p class="mt-3 text-secondary">No tienes los permisos necesarios para acceder a esta página.</p>
