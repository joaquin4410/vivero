<div class="low-stock-container">
    <h1 class="low-stock-title">Productos Próximos a Agotarse</h1>
    <p class="low-stock-subtitle">Lista de productos con menos de <span class="highlight">@limiteMinimo</span> unidades en inventario.</p>

    @if (productos != null && productos.Count > 0)
    {
        <div class="table-container">
            <table class="low-stock-table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Proveedor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in productos)
                    {
                        <tr class="@((producto.Cantidad <= 5) ? "critical-stock" : "")">
                            <td>@producto.Nombre</td>
                            <td>@producto.Descripcion</td>
                            <td>@producto.Precio.ToString("C")</td>
                            <td>@producto.Cantidad</td>
                            <td>@producto.Proveedor?.Nombre</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-low-stock">
            <p>¡No hay productos próximos a agotarse!</p>
        </div>
    }
</div>

<!--Menú lateral-->
